        {
            "test": "example@example.com",
            "options": {
                "attr": {
                    "class": "foo bar",
                    "name": "baz"
                },
                "ignore": [
                    "qux"
                ]
            },
            "expected": "<a href=\"mailto:example@example.com\" class=\"foo bar\" name=\"baz\">example@example.com</a>"
